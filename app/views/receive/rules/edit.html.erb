<div class="row mt-4">
  <div class="col-12">
    <h1>Ausnahmeregel bearbeiten</h1>
  </div>
</div>

<%= form_with model: @rule, url: receive_rule_path, method: :patch, class: 'row mt-3 input-group' do |form| %>
  <div class="mb-3 mt-3 col-sm-3">
    <%= form.label :field_to_search, 'Zu durchsuchendes Feld' %>
    <%= form.select :field_to_search, options_for_select(
      [{ name: 'Betreff', id: 'subject' }, { name: 'Absenderadresse', id: 'sender_address' }, { name: 'Inhalt der Nachricht', id: 'content' }].map { |c| [c[:name], c[:id]] }, @rule.field_to_search),
                    {}, { class: 'form-select' } %>
  </div>
  <div class="mt-3 mb-3 col-sm-3">
    <%= form.label :field_matcher, 'Wert' %>
    <%= form.text_field :field_matcher, class: "form-control", value: @rule.field_matcher %>
  </div>
  <div class="col-sm-6">
  </div>
  <%= link_to 'Regel lÃ¶schen', receive_delete_rule_path(@rule), class: 'col-sm-12 mb-3' %>
  <div class="col-sm-6">
    <%= form.submit 'Regel speichern', class: 'action' %>
  </div>
<% end %>
