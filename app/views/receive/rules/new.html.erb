<div class="row mt-4">
  <div class="col-12">
    <h1>Ausnahmeregel erstellen</h1>
  </div>
</div>

<%= form_with model: Rule.new, url: receive_rules_path, method: :post, class: 'row mt-3 input-group' do |form| %>
  <div class="mb-3 mt-3 col-sm-3">
    <%= form.label :field_to_search, 'Zu durchsuchendes Feld' %>
    <%= form.select :field_to_search, options_for_select(
      [{ name: 'Betreff', id: 'subject' }, { name: 'Absenderadresse', id: 'sender_address' }, { name: 'Inhalt der Nachricht', id: 'content' }].map { |c| [c[:name], c[:id]] }),
                    {}, { class: 'form-select' } %>
  </div>
  <div class="mt-3 mb-3 col-sm-3">
    <%= form.label :field_matcher, 'Wert' %>
    <%= form.text_field :field_matcher, class: "form-control" %>
  </div>
  <div class="col-sm-6">
  </div>
  <div class="col-sm-6">
    <%= form.submit 'Regel speichern', class: 'action' %>
  </div>
<% end %>